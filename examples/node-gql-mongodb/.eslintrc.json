{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "double"],
        "space-before-function-paren": 0,
        "comma-dangle": 0,
    },
    "root": true
}
